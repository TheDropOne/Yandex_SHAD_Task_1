<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:windowActionBar="false"
             tools:context=".Fragments.FragmentPreferences">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/preferences_sells_count_4x6"
                android:layout_width="120dp"
                android:layout_height="60dp"
                android:layout_margin="16dp"
                android:background="@color/light_grey"
                android:text="@string/preferences_sells_count_4x6"
                android:textSize="26sp"/>

            <Button
                android:id="@+id/preferences_sells_count_5x7"
                android:layout_width="120dp"
                android:layout_height="60dp"
                android:layout_margin="16dp"
                android:background="@color/light_grey"
                android:text="@string/preferences_sells_count_5x7"
                android:textSize="26sp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="160dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/preferences_sells_color_red"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_margin="16dp"
                android:background="@drawable/round_button_red"
                android:text="@string/preferences_sells_color_red"
                android:textColor="#FFFFFF"
                android:textSize="26sp"/>

            <Button
                android:id="@+id/preferences_sells_color_blue"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_margin="16dp"
                android:background="@drawable/round_button_blue"
                android:text="@string/preferences_sells_color_blue"
                android:textColor="#FFFFFF"
                android:textSize="20sp"/>
        </LinearLayout>
    </LinearLayout>

</FrameLayout>
